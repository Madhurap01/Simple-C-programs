#include <stdio.h>
#include<string.h>


void main()
{
    char str[20];
    
    
    printf("Enter the string\n");
    gets(str);
    printf("The abbreviation is\n");
    printf("%c",str[0]);
    for(int i=0;i<strlen(str);i++)
    {
        if(str[i]==' ')
        {
            printf("%c",str[i+1]);
        }
    }
    
}
